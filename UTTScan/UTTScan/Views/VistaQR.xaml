<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UTTScan.Views.VistaQR">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout >
                <Frame BackgroundColor="#092432">
                    <Label Text="Leer Código QR" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="White" FontSize="20"/>
                </Frame>
                <StackLayout Spacing="20">
                    <Entry x:Name="txtResultado" Placeholder="Resultado del QR"></Entry>
                    <Button x:Name="btnScannerQR" BackgroundColor="#092432" Text="Escanear" TextColor="White" CornerRadius="20" HorizontalOptions="Center" 
                WidthRequest="150" Clicked="btnScannerQR_Clicked"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>